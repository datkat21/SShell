<UserControl MouseEnter="Enter" MouseDown="Down" MouseUp="Up" MouseLeave="Leave" x:Class="SShell.Controls.TaskbarSideButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SShell.Controls"
             mc:Ignorable="d" 
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border VerticalAlignment="Center" x:Name="Bdr" Style="{DynamicResource TBitemPanelBdr}" Padding="18.5,10,18.5,10" Margin="0,0,0,0">
            <iconPacks:PackIconMaterialDesign x:Name="Icon" Kind="{Binding IconKind}" Foreground="{DynamicResource FG}" Height="17" VerticalAlignment="Center" />
        </Border>
    </Grid>
</UserControl>
