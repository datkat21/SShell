<Page x:Class="sShell.Windows.Settings.Views.Misc.Theme"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sShell.Windows.Settings.Views.Misc"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Theme" Foreground="{DynamicResource FG}" Loaded="Page_Loaded">

    <Grid>
        <StackPanel>
            <TextBlock Text="Theming Tab" />
            <ComboBox SelectedIndex="0" SelectionChanged="ComboBox_Selected" Background="Black" ItemContainerStyle="{DynamicResource ComboBoxItemContainerStyle1}" Style="{DynamicResource ComboBoxStyle1}" Padding="5" HorizontalAlignment="Left" x:Name="ThemeBox">
                <ComboBoxItem Tag="DarkTheme" Content="Dark (default)"></ComboBoxItem>
                <ComboBoxItem Tag="LightTheme" Content="Light"></ComboBoxItem>
            </ComboBox>
        </StackPanel>
    </Grid>
</Page>
