<Window x:Class="SShell.windows.Explorer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:packIcon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:SShell.windows"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Explorer" Height="450" Width="800" MinHeight="250" MinWidth="400" WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip" Background="{DynamicResource BGAlt}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" MinWidth="56"/>
            <ColumnDefinition Width="18*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="0" BorderBrush="{x:Null}" Background="{x:Null}">
            <StackPanel x:Name="LeftPane">
                
            </StackPanel>
        </ScrollViewer>
        <GridSplitter Background="#2b2b2b" Grid.Column="0" Width="1" />
    </Grid>
</Window>
